<Window x:Class="RestaurantOrders.Views.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:RestaurantOrders.Views"
        xmlns:vms="clr-namespace:RestaurantOrders.ViewModels"
        mc:Ignorable="d"
        Title="Create Account" Height="600" Width="500"
        Icon="/Images/KETO.png"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vms:CreateAccountViewModel/>
    </Window.DataContext>

    <Grid>
        <Border Background="#F0F0F0" 
                CornerRadius="8" 
                Width="450" 
                Height="550"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="25">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Create New Account" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Personal Information Section -->
                    <TextBlock Text="Personal Information" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,10"/>

                    <TextBlock Text="First Name:" 
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="FirstNameTextBox" 
                             Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                             Height="30" 
                             Padding="5"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"/>

                    <TextBlock Text="Last Name:" 
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="LastNameTextBox" 
                             Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                             Height="30" 
                             Padding="5"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"/>

                    <TextBlock Text="Phone Number:" 
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="PhoneTextBox" 
                             Text="{Binding PhoneNo, UpdateSourceTrigger=PropertyChanged}"
                             Height="30" 
                             Padding="5"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"/>

                    <TextBlock Text="Address:" 
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="AddressTextBox" 
                             Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                             Height="60" 
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True"
                             Padding="5"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"/>

                    <!-- Account Information Section -->
                    <TextBlock Text="Account Information" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0,20,0,10"/>

                    <TextBlock Text="Email:" 
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="EmailTextBox" 
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Height="30" 
                             Padding="5"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"/>

                    <TextBlock Text="Password:" 
                               Margin="0,10,0,5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="30" 
                                 Padding="5"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"/>

                    <TextBlock Text="Confirm Password:" 
                               Margin="0,10,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Height="30" 
                                 Padding="5"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"/>

                    <!-- Buttons Section -->
                    <Button x:Name="CreateAccountButton" 
                            Content="Create Account" 
                            Height="40"  
                            Foreground="White"
                            BorderThickness="0"
                            Click="CreateAccountButton_Click"
                            Command="{Binding CommandCreateAccount}"
                            Margin="0,30,0,10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#e69149"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#bf793d"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#996131"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="CancelButton" 
                            Content="Cancel" 
                            Height="40"  
                            Foreground="White"
                            BorderThickness="0"
                            Command="{Binding CommandCancelButton}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#572f0e"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40230b"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#301b09"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>