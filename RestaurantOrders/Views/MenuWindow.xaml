<Window x:Class="RestaurantOrders.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantOrders.Views"
        xmlns:vms="clr-namespace:RestaurantOrders.ViewModels"
        mc:Ignorable="d"
        Title="Restaurant Menu" Height="600" Width="900"
        Icon="/Images/KETO.png"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuCategoryStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="MenuItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5,5,5,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#DDDDDD" Direction="315" ShadowDepth="3" Opacity="0.3" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ItemNameStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ItemPriceStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
        </Style>

        <Style x:Key="QuantityButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="QuantityTextStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="30"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style x:Key="AddToCartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E7D32"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="30,8,10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <TextBlock Text="&#x1F50D;" 
                                           FontSize="16" 
                                           Margin="10,0,0,0" 
                                           VerticalAlignment="Center"
                                           Foreground="#999999"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Margin="{TemplateBinding Padding}" 
                                              VerticalAlignment="Center"/>
                                <TextBlock Text="Search menu items..." 
                                           Margin="{TemplateBinding Padding}" 
                                           Foreground="LightGray" 
                                           VerticalAlignment="Center"/>
                                           <!--Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" -->
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Items (Left Side) -->
        <ScrollViewer Grid.Column="0" Padding="20">
            <StackPanel>
                <TextBlock Text="Restaurant Menu" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           HorizontalAlignment="Center"/>

                <!-- Search Bar -->
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="SearchBox" 
                             Style="{StaticResource SearchBoxStyle}"/>
                             <!-- TextChanged="SearchBox_TextChanged" -->
                </Grid>

                <!-- Appetizers -->
                <TextBlock Text="Appetizers" Style="{StaticResource MenuCategoryStyle}"/>
                <WrapPanel>
                    <Border Style="{StaticResource MenuItemStyle}" Width="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Bruschetta" Style="{StaticResource ItemNameStyle}" Grid.Row="0"/>
                            <TextBlock Text="45.00 RON" Style="{StaticResource ItemPriceStyle}" Grid.Row="1"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                                <Button Content="-" Style="{StaticResource QuantityButtonStyle}"/>
                                <TextBlock Text="0" Style="{StaticResource QuantityTextStyle}"/>
                                <Button Content="+" Style="{StaticResource QuantityButtonStyle}"/>
                                <Button Content="Add to Cart"
                                        Style="{StaticResource AddToCartButtonStyle}" 
                                        Margin="15,0,0,0"
                                        IsEnabled="{Binding IsSubmitEnabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource MenuItemStyle}" Width="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Garlic Bread" Style="{StaticResource ItemNameStyle}" Grid.Row="0"/>
                            <TextBlock Text="30.00 RON" Style="{StaticResource ItemPriceStyle}" Grid.Row="1"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                                <Button Content="-" Style="{StaticResource QuantityButtonStyle}"/>
                                <TextBlock Text="0" Style="{StaticResource QuantityTextStyle}"/>
                                <Button Content="+" Style="{StaticResource QuantityButtonStyle}"/>
                                <Button Content="Add to Cart" 
                                        Style="{StaticResource AddToCartButtonStyle}" 
                                        Margin="15,0,0,0"
                                        IsEnabled="{Binding IsSubmitEnabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </WrapPanel>

                <!-- Main Courses -->
                <TextBlock Text="Main Courses" Style="{StaticResource MenuCategoryStyle}"/>
                <WrapPanel>
                    <Border Style="{StaticResource MenuItemStyle}" Width="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Spaghetti Carbonara" Style="{StaticResource ItemNameStyle}" Grid.Row="0"/>
                            <TextBlock Text="55.00 RON" Style="{StaticResource ItemPriceStyle}" Grid.Row="1"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                                <Button Content="-" Style="{StaticResource QuantityButtonStyle}"/>
                                <TextBlock Text="0" Style="{StaticResource QuantityTextStyle}"/>
                                <Button Content="+" Style="{StaticResource QuantityButtonStyle}"/>
                                <Button Content="Add to Cart" 
                                        IsEnabled="{Binding IsSubmitEnabled}"
                                        Style="{StaticResource AddToCartButtonStyle}" 
                                        Margin="15,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource MenuItemStyle}" Width="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Grilled Salmon" Style="{StaticResource ItemNameStyle}" Grid.Row="0"/>
                            <TextBlock Text="75.00 RON" Style="{StaticResource ItemPriceStyle}" Grid.Row="1"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                                <Button Content="-" Style="{StaticResource QuantityButtonStyle}"/>
                                <TextBlock Text="0" Style="{StaticResource QuantityTextStyle}"/>
                                <Button Content="+" Style="{StaticResource QuantityButtonStyle}"/>
                                <Button Content="Add to Cart" 
                                        IsEnabled="{Binding IsSubmitEnabled}"
                                        Style="{StaticResource AddToCartButtonStyle}" 
                                        Margin="15,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </WrapPanel>

                <!-- Desserts -->
                <TextBlock Text="Desserts" Style="{StaticResource MenuCategoryStyle}"/>
                <WrapPanel>
                    <Border Style="{StaticResource MenuItemStyle}" Width="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Tiramisu" Style="{StaticResource ItemNameStyle}" Grid.Row="0"/>
                            <TextBlock Text="35.00 RON" Style="{StaticResource ItemPriceStyle}" Grid.Row="1"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                                <Button Content="-" Style="{StaticResource QuantityButtonStyle}"/>
                                <TextBlock Text="0" Style="{StaticResource QuantityTextStyle}"/>
                                <Button Content="+" Style="{StaticResource QuantityButtonStyle}"/>
                                <Button Content="Add to Cart" 
                                        IsEnabled="{Binding IsSubmitEnabled}"
                                        Style="{StaticResource AddToCartButtonStyle}" 
                                        Margin="15,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource MenuItemStyle}" Width="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Chocolate Cake" Style="{StaticResource ItemNameStyle}" Grid.Row="0"/>
                            <TextBlock Text="40.00 RON" Style="{StaticResource ItemPriceStyle}" Grid.Row="1"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                                <Button Content="-" Style="{StaticResource QuantityButtonStyle}"/>
                                <TextBlock Text="0" Style="{StaticResource QuantityTextStyle}"/>
                                <Button Content="+" Style="{StaticResource QuantityButtonStyle}"/>
                                <Button Content="Add to Cart" 
                                        IsEnabled="{Binding IsSubmitEnabled}"
                                        Style="{StaticResource AddToCartButtonStyle}" 
                                        Margin="15,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </WrapPanel>

                <!-- Beverages -->
                <TextBlock Text="Beverages" Style="{StaticResource MenuCategoryStyle}"/>
                <WrapPanel>
                    <Border Style="{StaticResource MenuItemStyle}" Width="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Sparkling Water" Style="{StaticResource ItemNameStyle}" Grid.Row="0"/>
                            <TextBlock Text="15.00 RON" Style="{StaticResource ItemPriceStyle}" Grid.Row="1"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                                <Button Content="-" Style="{StaticResource QuantityButtonStyle}"/>
                                <TextBlock Text="0" Style="{StaticResource QuantityTextStyle}"/>
                                <Button Content="+" Style="{StaticResource QuantityButtonStyle}"/>
                                <Button Content="Add to Cart" 
                                        IsEnabled="{Binding IsSubmitEnabled}"
                                        Style="{StaticResource AddToCartButtonStyle}" 
                                        Margin="15,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource MenuItemStyle}" Width="250">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="House Wine" Style="{StaticResource ItemNameStyle}" Grid.Row="0"/>
                            <TextBlock Text="30.00 RON" Style="{StaticResource ItemPriceStyle}" Grid.Row="1"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                                <Button Content="-" Style="{StaticResource QuantityButtonStyle}"/>
                                <TextBlock Text="0" Style="{StaticResource QuantityTextStyle}"/>
                                <Button Content="+" Style="{StaticResource QuantityButtonStyle}"/>
                                <Button Content="Add to Cart" 
                                        IsEnabled="{Binding IsSubmitEnabled}"
                                        Style="{StaticResource AddToCartButtonStyle}" 
                                        Margin="15,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Shopping Cart (Right Side) -->
        <Border Grid.Column="1" 
                Background="#F9F9F9" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1,0,0,0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Your Order" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Grid.Row="0" 
                           Margin="0,0,0,15"/>

                <ScrollViewer Grid.Row="1">
                    <StackPanel>
                        <!-- This will be filled with selected items -->
                        <TextBlock Text="Your cart is empty" 
                                   FontStyle="Italic" 
                                   Foreground="#888888"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,50,0,0"/>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2">
                    <Border BorderBrush="#DDDDDD" 
                            BorderThickness="0,1,0,0" 
                            Padding="0,15,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Total:" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Grid.Column="0"/>

                            <TextBlock Text="0.00 RON" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Grid.Column="1"/>
                        </Grid>
                    </Border>

                    <Button Content="Place Order"
                            Height="50"
                            FontSize="16"
                            Margin="0,15,0,0"
                            IsEnabled="{Binding IsSubmitEnabled}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>