<Window x:Class="RestaurantOrders.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantOrders.Views"
        xmlns:helper="clr-namespace:RestaurantOrders.Helper"
        xmlns:vms="clr-namespace:RestaurantOrders.ViewModels"
        mc:Ignorable="d"
        Title="Restaurant Menu" Height="600" Width="900"
        Icon="/Images/KETO.png"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <helper:NumberToVisibilityConverter x:Key="NumberToVisibilityConverter" />

        <Style x:Key="MenuCategoryStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="MenuItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5,5,5,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#DDDDDD" Direction="315" ShadowDepth="3" Opacity="0.3" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ItemNameStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ItemPriceStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
        </Style>

        <Style x:Key="QuantityButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="QuantityTextStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="30"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style x:Key="AddToCartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E7D32"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#246327"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                            CornerRadius="18"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}">

                                <!-- This grid contains both the search icon and input box -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Search icon in its own column -->
                                    <TextBlock Grid.Column="0"
                                       Text="&#x1F50D;" 
                                       FontSize="16" 
                                       Margin="12,0,5,0" 
                                       VerticalAlignment="Center"
                                       Foreground="#999999"/>

                                    <!-- Content area for typing in second column -->
                                    <Grid Grid.Column="1">
                                        <!-- Actual text input area -->
                                        <ScrollViewer x:Name="PART_ContentHost" 
                                              Margin="0,0,10,0"
                                              VerticalAlignment="Center"/>

                                        <!-- Placeholder text -->
                                        <TextBlock Text="Search menu items..." 
                                           Margin="0,0,10,0"
                                           Foreground="LightGray" 
                                           VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Admin Menu Button Style -->
        <Style x:Key="AdminDropdownStyle" TargetType="Button">
            <Setter Property="Background" Value="#572f0e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0"
                                                  HorizontalAlignment="Left" 
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                                <Path Grid.Column="1" 
                                      Margin="5,0,10,0"
                                      Data="M 0,0 L 6,6 L 12,0 Z" 
                                      Fill="White" 
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40230b"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#301b09"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Menu Item Style -->
        <Style x:Key="DropdownMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Items (Left Side) -->
        <ScrollViewer Grid.Column="0" Padding="20">
            <StackPanel>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Admin Management Button with Dropdown -->
                    <Button x:Name="AdminMenuButton"
                            Content="&#x1F6E0;&#xFE0F; Management" 
                            Style="{StaticResource AdminDropdownStyle}"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Visibility="{Binding IsAdminVisibility, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Click="AdminMenuButton_Click">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Add Product" 
                                          Command="{Binding CommandAddProduct}"
                                          Style="{StaticResource DropdownMenuItemStyle}"/>
                                <MenuItem Header="Add Allergen" 
                                          Command="{Binding CommandAddAllergen}"
                                          Style="{StaticResource DropdownMenuItemStyle}"/>
                                <MenuItem Header="Add Category" 
                                          Command="{Binding CommandAddCategory}"
                                          Style="{StaticResource DropdownMenuItemStyle}"/>
                                <MenuItem Header="Create Menu" 
                                          Command="{Binding CommandCreateMenu}"
                                          Style="{StaticResource DropdownMenuItemStyle}"/>
                                <MenuItem Header="Delete Product" 
                                          Command="{Binding CommandDeleteProduct}"
                                          Style="{StaticResource DropdownMenuItemStyle}"/>
                                <MenuItem Header="Delete Allergen" 
                                          Command="{Binding CommandDeleteAllergen}"
                                          Style="{StaticResource DropdownMenuItemStyle}"/>
                                <MenuItem Header="Delete Menu" 
                                          Command="{Binding CommandDeleteMenu}"
                                          Style="{StaticResource DropdownMenuItemStyle}"/>
                                <MenuItem Header="Delete Category" 
                                          Command="{Binding CommandDeleteCategory}"
                                          Style="{StaticResource DropdownMenuItemStyle}"/>
                                <MenuItem Header="Show Orders" 
                                          Command="{Binding CommandShowOrders}"
                                          Style="{StaticResource DropdownMenuItemStyle}"/>
                                <MenuItem Header="Stock Stats" 
                                          Command="{Binding CommandShowStockStats}"
                                          Style="{StaticResource DropdownMenuItemStyle}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <TextBlock Text="Restaurant Menu" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Grid.Column="1"
                               HorizontalAlignment="Center"/>
                </Grid>

                <!-- Search Bar -->
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="SearchBox" 
                             Style="{StaticResource SearchBoxStyle}"
                             Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <!-- Menu -->
                <ItemsControl ItemsSource="{Binding FilteredCategoriesWithProducts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Category.Name}" 
                                  Style="{StaticResource MenuCategoryStyle}"/>

                                <WrapPanel>
                                    <ItemsControl ItemsSource="{Binding Products}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource MenuItemStyle}" Width="250">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <!-- Added for menu items list -->
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Text="{Binding Name}" 
                                                               Style="{StaticResource ItemNameStyle}" 
                                                               Grid.Row="0"/>
                                                        <TextBlock Text="{Binding Price, StringFormat={}{0:F2} RON}" 
                                                               Style="{StaticResource ItemPriceStyle}" 
                                                               Grid.Row="1"/>

                                                        <TextBlock Grid.Row="2" Margin="0,5,0,0">
                                                                <Run Text="Portion: " FontStyle="Italic"/>
                                                                <Run Text="{Binding Quantity}" FontWeight="SemiBold"/>
                                                                <Run Text="g" FontWeight="SemiBold"/>
                                                        </TextBlock>

                                                        <!-- Show "Menu" badge for menu items -->
                                                        <Border Grid.Row="3" 
                                                                Background="#4CAF50" 
                                                                CornerRadius="4" 
                                                                Padding="5,2" 
                                                                Margin="0,5,0,0"
                                                                HorizontalAlignment="Left"
                                                                Visibility="{Binding IsMenu, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBlock Text="MENU" 
                                                                   Foreground="White" 
                                                                   FontSize="10" 
                                                                   FontWeight="Bold"/>
                                                        </Border>

                                                        <StackPanel Orientation="Horizontal" 
                                                                    Grid.Row="4" 
                                                                    Margin="0,10,0,0">
                                                            <Button Content="-" 
                                                                    Style="{StaticResource QuantityButtonStyle}"
                                                                    Command="{Binding CommandDecreaseQuantity}"
                                                                    IsEnabled="{Binding DataContext.IsSubmitEnabled, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                                            <TextBlock Text="{Binding TempQuantity}" 
                                                                    Style="{StaticResource QuantityTextStyle}"/>
                                                            <Button Content="+" 
                                                                    Style="{StaticResource QuantityButtonStyle}"
                                                                    Command="{Binding CommandIncreaseQuantity}"
                                                                    IsEnabled="{Binding DataContext.IsSubmitEnabled, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                                            <Button Content="Add to Cart" 
                                                                    Style="{StaticResource AddToCartButtonStyle}" 
                                                                    Margin="15,0,0,0"
                                                                    Command="{Binding CommandAddToCart}"
                                                                    IsEnabled="{Binding DataContext.IsSubmitEnabled, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </WrapPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Shopping Cart (Right Side) -->
        <Border Grid.Column="1" 
        Background="#F9F9F9" 
        BorderBrush="#DDDDDD" 
        BorderThickness="1,0,0,0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Your Order" 
                  FontSize="22" 
                  FontWeight="Bold" 
                  Grid.Row="0" 
                  Margin="0,0,0,15"/>

                <ScrollViewer Grid.Row="1">
                    <StackPanel>
                        <!-- Cart is empty message -->
                        <TextBlock Text="Your cart is empty" 
                          FontStyle="Italic" 
                          Foreground="#888888"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="0,50,0,0"
                          Visibility="{Binding CartItems.Count, Converter={StaticResource NumberToVisibilityConverter}, ConverterParameter=0}"/>

                        <!-- Cart items -->
                        <ItemsControl ItemsSource="{Binding CartItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#EEEEEE" 
                                   BorderThickness="0,0,0,1" 
                                   Padding="0,8,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Name}" 
                                              Grid.Column="0" 
                                              VerticalAlignment="Center"/>

                                            <TextBlock Text="{Binding OrderQuantity, StringFormat=x{0}}" 
                                              Grid.Column="1" 
                                              Margin="5,0" 
                                              VerticalAlignment="Center"/>

                                            <TextBlock Text="{Binding Price, StringFormat={}{0:F2} RON}" 
                                              Grid.Column="2" 
                                              HorizontalAlignment="Right" 
                                              VerticalAlignment="Center" 
                                              FontWeight="SemiBold"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2">
                    <Border BorderBrush="#DDDDDD" 
                   BorderThickness="0,1,0,0" 
                   Padding="0,15,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Total:" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Grid.Column="0"/>

                            <TextBlock Text="{Binding CartTotal, StringFormat={}{0:F2} RON}" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Grid.Column="1"/>
                        </Grid>
                    </Border>

                    <Button Content="Place Order"
                       Height="50"
                       FontSize="16"
                       Margin="0,15,0,0"
                       Command="{Binding CommandPlaceOrder}"
                       IsEnabled="{Binding IsSubmitEnabled}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#246327"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>